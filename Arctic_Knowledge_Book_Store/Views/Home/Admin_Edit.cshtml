@model Arctic_Knowledge_Book_Store.Models.Stock

@{
    ViewBag.Title = "Edit Book";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>
    <h2 style="text-align:center;">Edit Book</h2>
    <div class="body-content">
        @if (Model == null)
        {
            <div class="alert alert-success" role="alert">
                Book is Updated Successfully!
            </div>
        }
        <form asp-action="Admin_Edit" asp-controller="Home" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
            <div class="form-horizontal">

                <div class="form-floating col-md-3">
                    @Html.EditorFor(model => model.Book.Name, new { htmlAttributes = new { @class = "form-control", id = "name", placeholder = "name", required = "" } })
                    <label for="name">Name</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide the book name!
                    </div>
                </div>
                <br />
                <div class="form-floating col-md-3">
                    @Html.EditorFor(model => model.Book.Author, new { htmlAttributes = new { @class = "form-control", id = "author", placeholder = "Author", required = "" } })
                    <label for="author">Author</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide the author's name!'
                    </div>
                </div>
                <br />
                <div class="form-floating col-md-3">
                    @Html.EditorFor(model => model.Book.Publication, new { htmlAttributes = new { @class = "form-control", id = "publication", placeholder = "Publication", required = "" } })
                    <label for="publication">Publication</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide the publication!
                    </div>
                </div>
                <br />
                <div class="form-floating col-md-3">
                    @Html.EditorFor(model => model.Book.ISBN, new { htmlAttributes = new { @class = "form-control", id = "isbn", placeholder = "ISBN", required = "" } })
                    <label for="isbn">ISBN</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide the ISBN!
                    </div>
                </div>
                <br />
                <div class="form-floating col-md-2">
                    @Html.EditorFor(model => model.Book.Price, new { htmlAttributes = new { @class = "form-control", id = "price", placeholder = "Price", required = "" } })
                    <label for="price">Price</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide the price!
                    </div>
                </div>
                <br />
                <div class="form-floating col-md-2">
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", id = "quantity", placeholder = "Quantity", required = "" } })
                    <label for="quantity">Quantity</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide quantity!
                    </div>
                </div>
                <br />
                <div class="col-md-3">
                    <label for="image" class="form-label">Image</label>
                    <input class="form-control" type="file" id="image" name="image">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please upload the book image!
                    </div>
                </div>
                <br />
                <div class="col-md-3">
                    <input type="submit" value="Update" class="btn btn-primary btn-lg" />
                    <span style="float:right">
                        <a href="@Url.Action("Admin_View","Home")" class="btn btn-outline-secondary btn-lg" tabindex="-1" role="button" aria-disabled="true">Book List</a>
                    </span>
                </div>
            </div>
        </form>
    </div>
    <script src="~/Scripts/validate-forms.js"></script>
</body>
